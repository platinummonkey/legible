# Example configuration file for legible
# Copy this file to ~/.legible.yaml and customize as needed
#
# Configuration precedence: CLI flags > Environment variables > Config file > Defaults

# Directory where downloaded and processed files will be saved
# Default: ~/legible
output-dir: ~/legible

# Filter documents by reMarkable labels (empty array syncs all documents)
# Default: [] (sync all)
labels:
  - work
  - personal

# Enable OCR processing to add searchable text layer to PDFs
# Default: true
ocr-enabled: true

# Ollama configuration for OCR
ollama:
  # Ollama API endpoint (default: http://localhost:11434)
  endpoint: http://localhost:11434

  # Vision model for OCR
  # Recommended: mistral-small3.1 (default, best accuracy), llava (faster), llava:13b (highest accuracy)
  # Default: mistral-small3.1
  model: mistral-small3.1

  # Temperature for model inference (0.0 = deterministic, 1.0 = creative)
  # Default: 0.0
  temperature: 0.0

  # Request timeout (e.g., 30s, 1m)
  # Default: 30s
  timeout: 30s

  # Maximum retry attempts for failed requests
  # Default: 3
  max-retries: 3

# Sync interval for daemon mode (0 = run once and exit)
# Valid values: 1m, 5m, 1h, etc.
# Default: 0s
sync-interval: 0s

# Path to sync state persistence file
# Default: ~/.legible-state.json
state-file: ~/.legible-state.json

# Logging verbosity level
# Valid values: debug, info, warn, error
# Default: info
log-level: info

# reMarkable API authentication token
# WARNING: Keep this secure! Better to use REMARKABLE_SYNC_REMARKABLE_TOKEN env var
# Default: ""
remarkable-token: ""

# Enable daemon mode for continuous sync operation
# Requires sync-interval > 0
# Default: false
daemon-mode: false
