# Example configuration file for remarkable-sync
# Copy this file to ~/.remarkable-sync.yaml and customize as needed
#
# Configuration precedence: CLI flags > Environment variables > Config file > Defaults

# Directory where downloaded and processed files will be saved
# Default: ~/remarkable-sync
output-dir: ~/remarkable-sync

# Filter documents by reMarkable labels (empty array syncs all documents)
# Default: [] (sync all)
labels:
  - work
  - personal

# Enable OCR processing to add searchable text layer to PDFs
# Default: true
ocr-enabled: true

# Languages to use for OCR (Tesseract language codes)
# Multiple languages can be specified with + separator (e.g., "eng+fra")
# Default: eng
ocr-languages: eng

# Sync interval for daemon mode (0 = run once and exit)
# Valid values: 1m, 5m, 1h, etc.
# Default: 0s
sync-interval: 0s

# Path to sync state persistence file
# Default: ~/.remarkable-sync-state.json
state-file: ~/.remarkable-sync-state.json

# Path to Tesseract executable (empty = use system PATH)
# Default: "" (use system PATH)
tesseract-path: ""

# Logging verbosity level
# Valid values: debug, info, warn, error
# Default: info
log-level: info

# reMarkable API authentication token
# WARNING: Keep this secure! Better to use REMARKABLE_SYNC_REMARKABLE_TOKEN env var
# Default: ""
remarkable-token: ""

# Enable daemon mode for continuous sync operation
# Requires sync-interval > 0
# Default: false
daemon-mode: false
